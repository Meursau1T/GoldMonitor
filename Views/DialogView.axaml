<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GoldMonitor.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="100"
        x:Class="GoldMonitor.Views.DialogView"
        x:DataType="vm:DialogViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GoldMonitor"
        Width="300"
        Height="200"
        CanResize="False"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        Topmost="True"
        PointerPressed="TitleBar_PointerPressed">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="Auto, *" ColumnDefinitions="Auto, *, Auto" Margin="10,10,10,10">
        <!-- 右上角图标: 关闭按钮 -->
        <Image
            Source="/Assets/close.png"
            Width="16" Height="16"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Grid.Row="0" Grid.Column="2"
            Cursor="Hand"
            PointerPressed="Close_PointerPressed" />
    </Grid>
</Window>