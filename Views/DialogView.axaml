<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GoldMonitor.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:GoldMonitor.Converters"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="100"
        x:Class="GoldMonitor.Views.DialogView"
        x:DataType="vm:DialogViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GoldMonitor"
        Width="600"
        Height="400"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        Topmost="True"
        PointerPressed="TitleBar_PointerPressed">

    <Window.Resources>
        <ResourceDictionary>
            <converters:ComparisonConverter x:Key="ComparisonConverter"/>
            <converters:LocaleConverter x:Key="LocaleConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:DialogViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="Auto, *" ColumnDefinitions="Auto, *, Auto" Margin="10,10,10,10">
        <!-- 右上角图标: 关闭按钮 -->
        <Image
            Source="/Assets/close.png"
            Width="16" Height="16"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Grid.Row="1" Grid.Column="0"
            Cursor="Hand"
            PointerPressed="Close_PointerPressed" />
        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="10">
            <!-- Title -->
            <TextBlock Text="价格提醒配置"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Margin="0,0,0,10" />

            <!-- List of existing alerts -->
            <ItemsControl ItemsSource="{Binding Alerts}">
                <ItemsControl.DataTemplates>
                    <DataTemplate x:DataType="vm:AlertItemViewModel">
                        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto" RowDefinitions="Auto"
                              Margin="0,2">
                            <TextBlock Grid.Column="0"
                                       Text="{Binding PriceThreshold}"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding ComparisonSymbol}"
                                       Margin="8,0"
                                       VerticalAlignment="Center" />
                            <TextBlock Grid.Column="2"
                                       Text="{Binding LocaleText}"
                                       VerticalAlignment="Center" />
                            <Image Grid.Column="3"
                                   Source="avares://GoldMonitor/Assets/circle-close.png"
                                   Width="16"
                                   Height="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Cursor="Hand" />
                            <Button Grid.Column="3"
                                    Command="{Binding RemoveCommand}"
                                    Opacity="0"
                                    Width="24"
                                    Height="24"
                                    Background="Transparent" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.DataTemplates>
            </ItemsControl>

            <!-- Add New Row -->
            <Grid ColumnDefinitions="Auto,8,Auto,8,Auto,8,Auto" Margin="0,10,0,0">
                <!-- Price Input -->
                <TextBox Grid.Column="0"
                         Text="{Binding NewPriceThreshold, Mode=TwoWay}"
                         Width="80"
                         Watermark="价格" />

                <!-- Comparison Dropdown -->
                <ComboBox Grid.Column="2"
                          ItemsSource="{Binding ComparisonOptions}"
                          SelectedItem="{Binding NewComparison}"
                          Width="60">
                    <ComboBox.DataTemplates>
                        <DataTemplate>
                            <TextBlock Text="{Binding  ., Converter={StaticResource ComparisonConverter}}"/>
                        </DataTemplate>
                    </ComboBox.DataTemplates>
                </ComboBox>

                <!-- Locale Dropdown -->
                <ComboBox Grid.Column="4"
                          ItemsSource="{Binding LocaleOptions}"
                          SelectedItem="{Binding NewLocale}"
                          Width="60">
                    <ComboBox.DataTemplates>
                        <DataTemplate>
                            <TextBlock Text="{Binding ., Converter={StaticResource LocaleConverter}}" />
                        </DataTemplate>
                    </ComboBox.DataTemplates>
                </ComboBox>

                <!-- Add Button (Plus Icon) -->
                <Image Grid.Column="6"
                       Source="avares://GoldMonitor/Assets/plus.png"
                       Width="16"
                       Height="16"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Cursor="Hand" />
                <Button Grid.Column="6"
                        Command="{Binding AddCommand}"
                        Opacity="0"
                        Width="24"
                        Height="24"
                        Background="Transparent" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>